CREATE TABLE SITIOS_XXX (ID_XXX INTEGER, EDAD INTEGER);
CREATE TABLE PEQUES (ID_XXX INTEGER, EDAD INTEGER);
CREATE TABLE ADULTOS (ID_XXX INTEGER, EDAD INTEGER);

CREATE  PORNO_XXX BEFORE INSERT ON SITIO_XXX FOR EACH ROW
BEGIN
IF :NEW.EDAD <18 THEN
INSERT INTO PEQUES VALUES(:NEW.ID_XXX,:NEW.EDAD);
ELSE
INSERT INTO ADULTOS VALUES (:NEW.ID_XXX,:NEW.EDAD);
END IF;
END;
/
DECLARE
MYEDAD INTEGER;
BEGIN
MYEDAD:=10;
FOR i in 1..16 LOOP
INSERT INTO SITIOS_xxx VALUES(i,MYEDAD);
MYEDAD:=MYEDAD + 1;
END LOOP;
END;
/

SELECT * FROM SITIOS_XXX;
SELECT * FROM PEQUES;
SELECT * FROM ADULTOS;
